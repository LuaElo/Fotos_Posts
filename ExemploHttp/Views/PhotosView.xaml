<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExemploHttp.Views.PhotosView">
    <VerticalStackLayout>
        
           <Button Command="{Binding getPhotoCommmand}" Text="Carregar Fotos" HorizontalOptions="Center"/>
        <ScrollView>
            <CollectionView ItemsSource="{Binding Photo}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Spacing="15" Padding="30" HorizontalOptions="Center">
                            
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

    </VerticalStackLayout>
</ContentPage>
