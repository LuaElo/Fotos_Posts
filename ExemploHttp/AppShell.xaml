<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExemploHttp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExemploHttp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ExemploHttp">


    <TabBar>
        <ShellContent
          Title="Fotos"
          ContentTemplate="{DataTemplate local:PhotosView}"
          Route="MainPage" />


        <ShellContent
            Title="Postagens"
            ContentTemplate="{DataTemplate local:PostsView}"
            Route="MainPage" />

    </TabBar>

</Shell>
